<%= form_for :ticket, url: tickets_path do |f| %>
	<p>
		<h2><%= @ticket.id %>: <%= @ticket.title %></h2>
	</p>

	<p>
		<h3>Ticket Description:</h3>
		<%= @ticket.body %>
	</p>


	<h2>Comments</h2><br>
	<%= form_for ([@ticket, @ticket.comments.build]) do |f| %>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	<% end %>


<% end %>

<%= link_to 'Back', {:action => 'index'} %>